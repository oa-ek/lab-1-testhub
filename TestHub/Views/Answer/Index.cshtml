@model IEnumerable<TestHub.Core.Models.Answer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCorrect)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsStrictText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @if (item.Image != null)
                {
                    @Html.DisplayFor(modelItem => item.Image)
                }
                else
                {
                    <span>Image is not available</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCorrect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStrictText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Title)
            </td>
            <td>
                <form asp-action="Edit" asp-route-id="@item.Id" method="post"> 
                    <button type="submit" class="btn  btn-light">Edit</button> 
                </form>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn  btn-light">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>